{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(flutter:*)",
      "Bash(git merge:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git push:*)",
      "Bash(git merge:*)",
      "Bash(git branch:*)",
      "Bash(gh:*)",
      "mcp__serena__*",
      "mcp__serena__find_file",
      "Bash(npx tsc:*)",
      "Bash(git pull:*)",
      "Bash(git reset:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/auto_skill_selector.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/router.py",
            "timeout": 120
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff & osascript -e 'display notification \"操作の許可が必要です\" with title \"Claude Code\" sound name \"\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff & osascript -e 'display notification \"処理が完了しました\" with title \"Claude Code\" sound name \"\"'"
          }
        ]
      }
    ]
  },
  "language": "日本語"
}
